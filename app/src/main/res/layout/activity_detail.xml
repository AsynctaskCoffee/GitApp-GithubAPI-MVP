<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f1f1f1"
    android:orientation="vertical"
    tools:context=".ui.detail.DetailActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#000000"
        android:elevation="2dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="?attr/actionBarSize"
            android:layout_height="?attr/actionBarSize"
            android:src="@drawable/ic_git_logo_secondary" />


    </LinearLayout>

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_margin="10sp"
                android:src="@drawable/ic_repo_list"
                app:tint="@color/prl" />

            <TextView
                android:id="@+id/txtGitUserName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/glora_regular"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:textColor="#0366db"
                tools:text="AndroidOfflineMapLibrary / " />

            <TextView
                android:id="@+id/txtRepoName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/glora_bold"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:textColor="#0366db"
                android:textStyle="bold"
                tools:text="AndroidOfflineMapLibrary" />

        </LinearLayout>

    </HorizontalScrollView>

    <TextView
        android:id="@+id/txtRepoDesc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:ellipsize="end"
        android:fontFamily="@font/glora_regular"
        android:gravity="center_vertical"
        android:maxLines="2"
        android:singleLine="false"
        android:textColor="#333333"
        android:textSize="12sp"
        tools:text="AndroidOfflineMapLibrary" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="10dp"
            android:src="@drawable/ic_license"
            app:tint="@color/prl" />

        <TextView
            android:id="@+id/txtLicenseName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="5dp"
            android:fontFamily="@font/glora_regular"
            android:includeFontPadding="false"
            android:textColor="#333333"
            android:textSize="12sp"
            tools:text="Apache-2.0 License" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imgStarCount"
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="10dp"
            android:src="@drawable/ic_star"
            app:tint="@color/prl" />

        <TextView
            android:id="@+id/txtStarCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="2dp"
            android:fontFamily="@font/glora_regular"
            android:includeFontPadding="false"
            android:textColor="#333333"
            android:textSize="12sp"
            tools:text="13 stars" />

        <ImageView
            android:id="@+id/imgForkCount"
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="15dp"
            android:src="@drawable/ic_fork"
            app:tint="@color/prl" />

        <TextView
            android:id="@+id/txtForkCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="2dp"
            android:fontFamily="@font/glora_regular"
            android:includeFontPadding="false"
            android:textColor="#333333"
            android:textSize="12sp"
            tools:text="13 forks" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">



    </LinearLayout>

</LinearLayout>