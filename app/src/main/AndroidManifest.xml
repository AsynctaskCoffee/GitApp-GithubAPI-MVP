<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.asynclabs.githubpersonalapplication">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:name="com.asynclabs.GitApp"
        android:allowBackup="true"
        android:icon="@drawable/ic_git_app_logo"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_git_app_logo"
        android:supportsRtl="true"
        android:theme="@style/Theme.GithubPersonalApplication">
        <activity
            android:name=".ui.detail.DetailActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.main.MainActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>